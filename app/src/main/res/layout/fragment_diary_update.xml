<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".diary.DiaryUpdateFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tmp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="Write"
                android:textSize="25dp"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="10dp"
                android:background="#CCCCCC"
                app:layout_constraintTop_toBottomOf="@+id/tmp" />

            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/line"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/text_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Date"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:hint="날짜를 선택해주세요."
                    android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/linear1"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Title"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/title"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:hint="(공백 포함 20자 이내 가능)"
                    android:maxLength="20"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/linear2"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/text_feel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Feel"
                    android:textSize="20dp" />

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp">

                    <RadioButton
                        android:id="@+id/rg_btn1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="행복"
                        android:theme="@style/radiobtn"/>

                    <RadioButton
                        android:id="@+id/rg_btn2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="웃김"
                        android:theme="@style/radiobtn"/>

                    <RadioButton
                        android:id="@+id/rg_btn3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="슬픔"
                        android:theme="@style/radiobtn"/>

                    <RadioButton
                        android:id="@+id/rg_btn4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="화남"
                        android:theme="@style/radiobtn"/>

                </RadioGroup>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/linear3"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/text_keyword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="HashTag"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/hashtag1"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:hint="#해시"
                    android:maxLength="3"
                    android:textColor="#0000FF"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/hashtag2"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:hint="#태그"
                    android:maxLength="3"
                    android:textColor="#0000FF"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/hashtag3"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:hint="#입력"
                    android:maxLength="3"
                    android:textColor="#0000FF"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="@+id/linear4"
                app:layout_constraintTop_toBottomOf="@+id/linear4"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/text_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Image"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/bt_choose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btn_shape"
                    android:text="Choose"
                    android:textColor="@color/black"
                    android:textSize="10dp" />

                <Button
                    android:id="@+id/bt_upload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/btn_shape"
                    android:text="Upload"
                    android:textColor="@color/black"
                    android:textSize="10dp" />

                <Button
                    android:id="@+id/bt_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/btn_shape"
                    android:text="Delete"
                    android:textColor="@color/black"
                    android:textSize="10dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/img_linear"
                android:layout_width="280dp"
                android:layout_height="250dp"
                android:layout_marginTop="40dp"
                app:layout_constraintRight_toRightOf="@+id/line"
                app:layout_constraintTop_toTopOf="@+id/linear5">

                <ImageView
                    android:id="@+id/iv_preview"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_linear"
                tools:ignore="MissingConstraints">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/voice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/black"
                    android:contentDescription="addDiary"
                    app:srcCompat="@android:drawable/ic_btn_speak_now" />

                <EditText
                    android:id="@+id/content"
                    android:layout_width="370dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:maxLength="500"
                    android:hint="(공백 포함 500자 이내로 작성가능합니다.)"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/save_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_gravity="right"
                    android:layout_marginBottom="10dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/feelbtn_shape"
                    android:text="저장" />

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

</LinearLayout>