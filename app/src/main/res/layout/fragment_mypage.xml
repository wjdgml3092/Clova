<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".mypage.MyPageFragment">

    <TextView
    android:id="@+id/know_mypage"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Mypage"
    android:textSize="25dp"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="10dp"
    app:layout_constraintTop_toTopOf="parent"
    tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_margin="10dp"
        android:background="#CCCCCC"
        app:layout_constraintTop_toBottomOf="@+id/know_mypage" />

      <TextView
        android:id="@+id/write_count"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="기록한 횟수"
          android:textAlignment="center"
        android:textSize="25dp"
        android:layout_marginTop="15dp"
          android:layout_marginStart="10dp"
          android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@+id/line"
        tools:ignore="MissingConstraints" />

        <LinearLayout
        android:id="@+id/mypage_line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/write_count"
        tools:ignore="MissingConstraints">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/mypage_person" />
            <TextView
                android:id="@+id/nameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="오늘 하루도 고생 많으셨습니다.\n당신의 소중한 일상을 clova에 기록하세요."
                android:textSize="17dp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="MissingConstraints"
                app:layout_constraintTop_toBottomOf="@+id/mypage_line1">

                <TextView
                    android:id="@+id/fixText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:text="- CLOVA"
                    android:textSize="13dp"/>

            </LinearLayout>

    <Button
        android:id="@+id/modify_info"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="비밀번호 재설정"
        android:textSize="18dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintVertical_bias="0.45"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/modify_message"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="메시지 수정"
        android:textSize="18dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.56"
        app:layout_constraintTop_toTopOf="parent"/>
    
    <Button
        android:id="@+id/notice"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="공지사항"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.66"
        app:layout_constraintTop_toTopOf="parent"/>
    <Button
        android:id="@+id/QandA"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Q&amp;A"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.76"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/discard_account"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="회원탈퇴"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.86"
        app:layout_constraintTop_toTopOf="parent"/>
    <Button
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="로그아웃"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.96"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>