<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/know_mypage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="튜토리얼"
                android:textSize="25dp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="10dp"
                android:background="#CCCCCC"
                app:layout_constraintTop_toBottomOf="@+id/know_mypage" />

            <ImageView
                android:id="@+id/tuto1"
                android:layout_width="380dp"
                android:layout_height="380dp"
                android:src="@drawable/tuto1"
                app:layout_constraintTop_toBottomOf="@+id/line"
                tools:ignore="MissingConstraints" />


            <ImageView
                android:id="@+id/tuto2"
                android:layout_width="380dp"
                android:layout_height="380dp"
                android:src="@drawable/tuto2"
                app:layout_constraintTop_toBottomOf="@+id/tuto1"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/tuto3"
                android:layout_width="380dp"
                android:layout_height="380dp"
                android:src="@drawable/tuto3"
                app:layout_constraintTop_toBottomOf="@+id/tuto2"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/tuto4"
                android:layout_width="380dp"
                android:layout_height="380dp"
                android:src="@drawable/tuto4"
                app:layout_constraintTop_toBottomOf="@+id/tuto3"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/tuto5"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:src="@drawable/tuto5"
                app:layout_constraintTop_toBottomOf="@+id/tuto4"
                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>