<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Theme.Clova" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#000</item>

        <item name="android:textColor">#000000</item>

        <item name="android:fontFamily">@font/font_ver1</item>

    </style>

    <style name="radiobtn" parent="Theme.AppCompat.Light">
        <item name="colorAccent">#9FC93C</item>
        <item name="colorControlNormal">#BDBDBD</item>
    </style>

</resources>